<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marathon.MainPage"
             Title="Marathon">

    <ScrollView>
        <StackLayout
            Spacing="25"
            Padding="30,20">
            
            <Label Text="Race Results" FontSize="Title" HorizontalTextAlignment="Center" />
            <ListView x:Name="lstResults"/>
            <Picker x:Name="pkrRace" ItemDisplayBinding="{Binding race_name}" 
                    Title="Choose a Race" FontSize="Medium" HorizontalTextAlignment="Center" BackgroundColor="LightGray" SelectedIndexChanged="PkrRace_OnSelectedIndexChanged"/>
            

        </StackLayout>
    </ScrollView>

</ContentPage>
